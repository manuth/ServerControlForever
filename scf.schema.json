{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "abbreviatedCommands": {
            "type": "boolean",
            "description": "A value indicating whether command abbreviations are enabled."
        },
        "server": {
            "type": "object",
            "description": "Information about the TrackMania server to connect to.",
            "properties": {
                "address": {
                    "description": "The address of the TrackMania server to connect to.",
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "object",
                            "properties": {
                                "host": {
                                    "type": "string",
                                    "description": "The hostname or the IP address of the server to connect to.",
                                    "default": "localhost"
                                },
                                "port": {
                                    "type": "integer",
                                    "description": "The port of the server to connect to.",
                                    "minimum": 1,
                                    "maximum": 65535,
                                    "default": 5000
                                }
                            }
                        }
                    ],
                    "default": "localhost:5000"
                },
                "username": {
                    "type": "string",
                    "description": "The username to use when connecting to the server.",
                    "default": "SuperAdmin"
                },
                "password": {
                    "type": "string",
                    "description": "The password to use when connecting to the server.",
                    "default": "password"
                },
                "timeout": {
                    "type": "integer",
                    "description": "The timeout in seconds to wait for a response from the server.",
                    "default": 180
                }
            }
        }
    }
}

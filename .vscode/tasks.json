{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Lint PHP-Code",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "composer",
            "args": [
                "lint"
            ],
            "problemMatcher": {
                "owner": "phpcs",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^\"(.*)\",(\\d+),(\\d+),(.*),\"(.*)\",(.*),(\\d+),(\\d+)",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "message": 5,
                        "code": 6
                    }
                ],
                "severity": "warning"
            }
        }
    ]
}
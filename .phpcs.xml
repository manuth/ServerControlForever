<?xml version="1.0"?>
<ruleset name="Custom">
    <description>A custom coding standard</description>
    <!-- Don't sniff third party libraries -->
    <exclude-pattern>*/themes/simple/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/thirdparty/*</exclude-pattern>
    <!-- Ignore build output -->
    <exclude-pattern>*/builds/*</exclude-pattern>
    <!-- Show progress and output sniff names on violation, and add colours -->
    <arg value="sp"/>
    <arg name="colors"/>
    <arg name="filter" value="./.phpcs/SCFFilter.php"/>
    <arg name="extensions" value="php/php,inc/php"/>
    <!-- Use PSR-2 as a base standard -->
    <rule ref="PSR2">
        <!-- Allow Windows-like EOL-characters -->
        <exclude name="Generic.Files.LineEndings.InvalidEOLChar"/>
        <!-- Allow classes to not declare a namespace -->
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>
        <!-- Allow namespaces without a following EOL-character -->
        <exclude name="PSR2.Namespaces.NamespaceDeclaration.BlankLineAfter"/>
        <!-- Allow underscores in class names -->
        <exclude name="Squiz.Classes.ValidClassName.NotCamelCaps"/>
        <!-- Allow non camel cased method names -->
        <exclude name="PSR1.Methods.CamelCapsMethodName.NotCamelCaps"/>
        <!-- Allow Braces on new line -->
        <exclude name="Squiz.Functions.MultiLineFunctionDeclaration.BraceOnNewLine"/>
        <!-- Allow any line length -->
        <exclude name="Generic.Files.LineLength.TooLong"/>
        <!-- Disable enforcement of control block bracket placement -->
        <exclude name="Squiz.ControlStructures.ControlSignature.SpaceAfterCloseParenthesis"/>
        <exclude name="Squiz.ControlStructures.ControlSignature.SpaceAfterCloseBrace"/>
        <exclude name="Squiz.ControlStructures.ControlSignature.SpaceAfterKeyword"/>
        <exclude name="PSR2.ControlStructures.ControlStructureSpacing"/>
        <exclude name="PSR2.ControlStructures.ElseIfDeclaration"/>
    </rule>
    <!-- Enforce Braces on new line -->
    <rule ref="Generic.Functions.OpeningFunctionBraceBsdAllman">
        <properties>
            <property name="checkClosures" value="true" />
        </properties>
    </rule>
    <!-- Allow newline characters in for-loops -->
    <rule ref="Squiz.ControlStructures.ForLoopDeclaration">
        <properties>
            <property name="ignoreNewlines" value="true" />
        </properties>
    </rule>
    <rule ref="PSR12.ControlStructures.ControlStructureSpacing"/>
    <rule ref="PSR1.Files.SideEffects.FoundWithSymbols">
        <exclude-pattern>scf</exclude-pattern>
    </rule>
</ruleset>
